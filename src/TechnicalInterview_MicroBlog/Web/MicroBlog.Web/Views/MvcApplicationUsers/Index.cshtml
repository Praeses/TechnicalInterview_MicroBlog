@model IEnumerable<MicroBlog.Web.Models.ViewModel.ApplicationUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Follow", "Edit", new { applicationUserId = item.ApplicationUserId })
        </td>
    </tr>
}

</table>
